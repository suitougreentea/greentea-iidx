doctype html
html(lang="ja")
  head
    meta(charset="UTF-8")
    meta(name="viewport" content="width=device-width, initial-scale=1.0")
    link(rel="stylesheet" href="//netdna.bootstrapcdn.com/bootstrap/3.0.0/css/bootstrap.min.css")
    link(rel="stylesheet" href="//netdna.bootstrapcdn.com/bootstrap/3.0.0/css/bootstrap-theme.min.css")
    link(rel="stylesheet" href="style.css")
    title Greentea IIDX Manager
  body
    nav.navbar.navbar-inverse.navbar-fixed-top(role="navigation")
      div.container
        div.navbar-header
          button.navbar-toggle(type="button" data-toggle="collapse" data-target="#bs-example-navbar-collapse-1")
            span.sr-only Toggle navigation
            span.icon-bar
            span.icon-bar
            span.icon-bar
          a.navbar-brand Greentea IIDX Manager
        div#gt-navbar-collapse.collapse.navbar-collapse
          ul.nav.navbar-nav
            li.active
              a(href="#") Input
            li
              a(href="#") View
          ul.nav.navbar-nav.navbar-right
            li
              | {% if logged_in %}
              a.dropdown-toggle(data-toggle="dropdown" href="#")
                | {{ username }}
                span.caret
              ul.dropdown-menu
                li(role="presentation")
                  a(role="menuitem" tabindex="-1" href="#") Profile
                li.divider(role="presentation")
                li(role="presentation")
                  a(role="menuitem" tabindex="-1" href="{{ logout_url }}") Logout
              | {% else %}
              a(href="#") Login
              | {% endif %}

    div#container.container
      div.row
        div.col-md-9.col-md-push-3
          div#musiclist-container.panel.panel-default
        div.col-md-3.col-md-pull-9
          div#sidebar-panel.panel.panel-default
            div#sidebar-container.panel-body
              button#buttonsubmit.btn.btn-default(type="button") Submit
    footer
      div.container
        hr
        p.text-center Greentea IIDX Manager / 2014 suitougreentea
    script(src="//ajax.googleapis.com/ajax/libs/jquery/2.0.3/jquery.min.js")
    script(src="//netdna.bootstrapcdn.com/bootstrap/3.0.0/js/bootstrap.min.js")
    script.
      var currentUser = "{{ username }}";
      var mode = "{{ mode }}";
      var targetUser = "{{ targetuser }}"
    script(src="script.js")