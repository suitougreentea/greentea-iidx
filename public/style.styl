folder-color(c1, c2, cd, cb)
  background linear-gradient(to bottom, c1 0%, c2 100%)
  background-color cd
  border-color cb

body
  padding-top 75px

// Prefix for original class
.gt-
  &table-musiclist
    thead > tr > th, tbody > tr > td
      height 24px
      padding 0px 8px
      vertical-align middle
    .form-control
      height 20px
      padding 0px 6px
    .btn
      width 120px
      padding 0px 6px
    .form-group
      margin-bottom 0px
  &nowrap
    white-space nowrap
  &scoreinput
    text-align right
    width 64px
  &difficultylabel
    font-size: 80%;
    width: 100px;
    &-small
      width 24px
    &-normal
      background-color #05C
    &-hyper
      background-color #B90
    &-another
      background-color #C00
  #musiclist-container > &folderpanel
    &-version
      folder-color #DFF #BDF #CEF #ACF